{
    "name": "ccap-products",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@cap-js/graphql": "^0.7.0",
        "@sap-cloud-sdk/http-client": "^3.5.0",
        "@sap-cloud-sdk/resilience": "^3.5.0",
        "@sap/cds": "^7.2.1",
        "@sap/cds-hana": "^2",
        "@sap/cds-odata-v2-adapter-proxy": "^1.9.21",
        "dotenv": "^16.3.1",
        "express": "^4"
    },
    "devDependencies": {
        "@cap-js/sqlite": "^1",
        "@sap/cds-dk": "^7",
        "@sap/ux-specification": "^1.108.14",
        "cds-swagger-ui-express": "^0.6.0",
        "rimraf": "^3.0.2"
    },
    "scripts": {
        "start": "cds-serve",
        "watch-products": "cds watch --open products/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy ccap-products --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
    },
    "cds": {
        "feature": {
            "graphql": true
        },
        "requires": {
            "db": {
                "kind": "sqlite",
                "model": [
                    "db",
                    "srv"
                ],
                "credentials": {
                    "database": "db/DDBB"
                }
            },
            "sapbackend": {
                "kind": "odata-v2",
                "model": "srv/external/sapbackend",
                "credentials": {
                    "requestTimeout": 30000,
                    "url": "http://erp13.sap4practice.com:9037/sap/opu/odata/sap/YSAPUI5_SRV_01",
                    "authentication": "NoAuthentication"
                }
            }
        }
    },
    "sapux": [
        "app/products"
    ]
}